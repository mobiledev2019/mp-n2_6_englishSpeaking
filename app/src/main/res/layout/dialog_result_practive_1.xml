<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvResultWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCorrect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvResultMean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResultWord"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="#03A9F4"
        android:textSize="17dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_khongphaila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResultMean"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="#ffa726"
        android:textSize="17dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnContinues"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_khongphaila"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        android:text="Continues"
        android:textAllCaps="false"
        android:textColor="#fff" />
</RelativeLayout>
